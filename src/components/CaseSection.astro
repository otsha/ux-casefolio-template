---
import { getCollection } from "astro:content"
import CaseCard from "./CaseCard.astro"

const cases = await getCollection('cases')
---

<div id="cases" class="my-8 w-5/6 md:w-4/6 lg:w-3/6 flex flex-col justify-start items-center">
    {cases.map((c) => <CaseCard title={c.data.title} url={`/cases/${c.slug}`} img={c.data.coverImage} />)}
</div>