---
import NavLink from "./NavLink.astro"
---

<nav class="fixed top-0 bg-[#121212] w-full p-4 flex flex-col justify-start items-center gap-4 md:flex-row md:justify-between md:items-baseline md:gap-0 md:px-8">
    <button id="titlebtn"><h1 class="text-4xl m-0 p-0">Your Portfolio</h1></button>
    <div class="flex flex-col justify-center items-center gap-2 md:flex-row md:justify-evenly md:items-baseline md:gap-8">
        <NavLink text="About" url="/#about" />
        <NavLink text="Cases" url="/#cases" />
        <NavLink text="Link" url="https://example.com" />
    </div>
</nav>

<script>
    const titleBtn = document.getElementById('titlebtn')
    titleBtn?.addEventListener('click', () => {
        if (window.location.pathname === '/') {
            document.getElementById('top')?.scrollIntoView({ behavior: 'smooth' })
        } else {
            window.location.replace('/')
        }
    })
</script>